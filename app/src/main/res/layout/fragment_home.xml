<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161022"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GrayView App"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#8455F1"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/homeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bem-vindo ao GrayView!\n\nAqui você pode editar suas imagens com filtros como brilho, contraste, negativo, e muito mais.\n\nUse o menu lateral para navegar pelas funcionalidades do app."
            android:textSize="16sp"
            android:textColor="#F6F6F8"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:id="@+id/homeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Exemplo de edição"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            android:clipToOutline="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/homeTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dicas:\n• Toque em 'Editar Imagem' para começar a aplicar filtros.\n• Navegue pelos filtros usando o menu inferior.\n• Visualize as mudanças antes de salvar a imagem."
            android:textSize="14sp"
            android:textColor="#B9B3C8"
            android:lineSpacingExtra="2dp"/>
    </LinearLayout>
</ScrollView>
