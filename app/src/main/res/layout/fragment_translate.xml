<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#161022"
    android:padding="16dp"
    tools:context=".activities.fragments.editfragments.TranslateFragment">

    <TextView
        android:id="@+id/title_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotação"
        android:textColor="#F6F6F8"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="#221A36"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- Botão com ícone menor (undo) -->
            <Button
                android:id="@+id/btn_rotate_270"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="6dp"
                android:backgroundTint="#8455F1"

                android:drawableTop="@drawable/ic_undo"
                android:drawablePadding="4dp"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:textColor="#FFFFFF"
                />

            <!-- Botão texto 180° -->
            <Button
                android:id="@+id/btn_rotate_180"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:drawableTop="@drawable/ic_rotate"
                android:scaleType="centerInside"
                android:drawablePadding="4dp"
                android:layout_marginHorizontal="6dp"
                android:padding="6dp"
                android:backgroundTint="#8455F1"
                android:textColor="#FFFFFF" />

            <!-- Botão com ícone menor (redo) -->
            <Button
                android:id="@+id/btn_rotate_90"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="6dp"
                android:backgroundTint="#8455F1"
                android:drawableTop="@drawable/ic_redo"
                android:drawablePadding="4dp"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:textColor="#FFFFFF"
               />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
